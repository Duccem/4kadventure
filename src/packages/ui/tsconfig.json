{
  "extends": "@4k/typescript-config/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@4k/*": [
        "../*"
      ],
      "@4k/design-system/*": [
        "./*"
      ]
    },
    "jsx": "react-jsx"
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}