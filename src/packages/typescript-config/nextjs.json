{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "incremental": true,
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./*"],
      "@4k/*": ["../../packages/*"]
    }
  },
  "exclude": ["node_modules"]
}
